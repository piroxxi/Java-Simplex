<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.codePanel {
			font-size: 12px;
		}
		
		.code_import {
			color: blue;
		}
		
		.code_package {
			color: orange;
		}
		
		.code_java {
			color: red;
		}
		
		.indent {
			padding-left: 25px;
		}
		
		.indent:hover {
			background: rbga(0, 0, 0, 0.2);
		}
		
		.a_name {
			position: relative;
			display: inline;
			border-bottom: 1px solid rgba(0, 0, 0, 0.36);
		}
		
		.a_description {
			display: none;
		}
		
		.a_description:first-letter {
			padding-left: 15px;
		}
		
		.a_name:hover .a_description {
			display: block;
			position: absolute;
			background: rgba(0, 0, 0, 0.82);
			color: rgba(222, 169, 0, 1);
			padding: 10px;
			border: 1px solid black;
			border-radius: 3px;
			top: 16px;
			left: 18px;
			width: 256px;
			z-index: 1;
			padding-top: 25px;
			padding-bottom: 25px;
		}
		
		.a_title {
			position: absolute;
			top: 0px;
			left: 0px;
			border-radius: 3px 0px;
			width: 173px;
			height: 16px;
			background: rgba(222, 169, 0, 1);
			color: black;
			padding: 2px;
			padding-left: 14px;
		}
		
		.a_goto {
			position: absolute;
			bottom: 2px;
			right: 11px;
			color: rgba(222, 169, 0, 1);
			text-decoration: underline;
			font-weight: bold;
			font-size: 10px;
		}
	</ui:style>

	<g:HTMLPanel styleName="{style.codePanel}">
		<span class="{style.code_package}">package
			fr.piroxxi.s2le.client.ui;</span>
		<br />
		<br />
		<span class="{style.code_import}">import java.util.Date;</span>
		<br />
		<br />
		<span class="{style.code_import}">import
			com.google.gwt.user.client.Cookies;</span>
		<br />
		<span class="{style.code_import}">import
			com.google.gwt.user.client.Window;</span>
		<br />
		<span class="{style.code_import}">import
			com.google.gwt.user.client.rpc.AsyncCallback;</span>
		<br />
		<br />
		<span class="{style.code_import}">import
			fr.piroxxi.s2le.client.ClientFactory;</span>
		<br />
		<span class="{style.code_import}">import
			fr.piroxxi.s2le.client.events.LoggedInEvent;</span>
		<br />
		<span class="{style.code_import}">import
			fr.piroxxi.s2le.client.events.LoggedOutEvent;</span>
		<br />
		<br />
		<span class="{style.code_java}">public class</span>
		<div class="{style.a_name}">
			SessionManager
			<div class="{style.a_description}">
				<div class="{style.a_title}">SessionManager</div>
				La class
				<span class="{style.code_java}">SessionManager</span>
				est
				une class comme une autre. Bref, ici on affichera de la
				javadoc :)
				.
				<div class="{style.a_goto}">voir le code source</div>
			</div>
		</div>
		{
		<div class="{style.indent}">
			<span class="{style.code_java}">public interface</span>
			<div class="{style.a_name}">
				SessionVerifier
				<div class="{style.a_description}">
					<div class="{style.a_title}">SessionVerifier</div>
					Aucune javadoc trouvée
					:/ .
					<div class="{style.a_goto}">voir le code source</div>
				</div>
			</div>
			{
			<div class="{style.indent}">
				<span class="{style.code_java}">public void</span>
				<div class="{style.a_name}">
					isLoggedIn
					<div class="{style.a_description}">
						<div class="{style.a_title}">isLoggedIn</div>
						Aucune javadoc trouvée
						:/ .
						<div class="{style.a_goto}">voir le code source</div>
					</div>
				</div>
				(
				<span class="{style.code_java}">boolean</span>
				loggedIn);
			</div>
			}
			<br />
			<br />
			<span class="{style.code_java}">private
				static final</span>
			<span class="{style.code_import}">Long</span>
			TEN_MINUTES =
			<span class="{style.code_java}">new</span>
			<span class="{style.code_import}">Long</span>
			(
			<span class="{style.code_package}">1000
				* 60 * 10</span>
			);
			<br />
			<br />

		</div>
	</g:HTMLPanel>
</ui:UiBinder>
